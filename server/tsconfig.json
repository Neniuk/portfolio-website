{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "skipLibCheck": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
